{
  "name": "CSPect",
  "version": "0.0.1",
  "lowCaseName": "cspect",
  "description": "CSP management tool for MODX",
  "author": "matdave",
  "package": {
    "menus": [
      {
          "text": "cspect.menu",
          "description": "cspect.menu_desc",
          "action": "manage"
      }
    ]
  },
  "database":{
    "tables": [
      "CSPDirective",
      "CSPSource",
      "CSPSourceDirective",
      "CSPSourceContext",
      "CSPViolation"
    ]
  },
  "build": {
    "resolver": {
      "after": [
        "lit.php",
        "directives.php",
        "sources.php"
      ]
    }
  }
}